source ~/amber16/dat/leap/cmd/leaprc.constph
source leaprc.water.tip3p
source leaprc.gaff

# Load the missing parameters
loadamberparams lig/citralva.frcmod
# Load ligand
loadoff lig/citralva.lib
# Load complex 
cpx = loadpdb orig_wt_ctv.pdb
# Add S bonds
bond mol.88.SG mol.106.SG
bond mol.17.SG mol.49.SG


# Now continue as normal
solvateoct cpx TIP3PBOX 10 
charge cpx
addions2 cpx Cl- 0
addions2 cpx Na+ 0

saveamberparm cpx ctv.prmtop ctv.rst7
savepdb cpx ctv.pdb

quit
